<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <group android:name="water_drop">
                <path
                    android:name="path"
                    android:pathData="M 12 20 C 8.686 20 6 17.314 6 14 C 6 10 12 3.25 12 3.25 C 12 3.25 18 10 18 14 C 18 17.314 15.314 20 12 20 Z"
                    android:fillColor="#000"
                    android:strokeWidth="1"/>
            </group>
            <group
                android:name="group_1"
                android:translateX="-2"
                android:translateY="23">
                <path
                    android:name="path_1"
                    android:pathData="M 10 4 L 10 7 L 18 7 L 18 4 L 10 4 M 8 2 L 21 2 L 21 3 L 20 4 L 20 20 L 21 21 L 21 22 L 7 22 L 7 21 L 8 20 L 8 18.6 L 4.2 16.83 C 3.5 16.5 3 15.82 3 15 L 3 8 C 3 6.895 3.895 6 5 6 L 8 6 L 8 4 L 7 3 L 7 2 L 8 2 M 5 15 L 8 16.39 L 8 8 L 5 8 L 5 15 Z"
                    android:fillColor="#000"
                    android:strokeWidth="1"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="water_drop">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="scaleX"
                    android:duration="250"
                    android:valueFrom="1"
                    android:valueTo="0.25"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="250"
                    android:valueFrom="1"
                    android:valueTo="0.25"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
                <objectAnimator
                    android:propertyName="translateX"
                    android:duration="250"
                    android:valueFrom="0"
                    android:valueTo="9"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
                <objectAnimator
                    android:propertyName="translateY"
                    android:duration="250"
                    android:valueFrom="0"
                    android:valueTo="10"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
                <objectAnimator
                    android:propertyName="translateY"
                    android:startOffset="250"
                    android:duration="250"
                    android:valueFrom="10"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
                <objectAnimator
                    android:propertyName="translateY"
                    android:startOffset="750"
                    android:duration="250"
                    android:valueFrom="0"
                    android:valueTo="8"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
    <target android:name="group_1">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="translateY"
                android:startOffset="500"
                android:duration="500"
                android:valueFrom="23"
                android:valueTo="2"
                android:valueType="floatType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
</animated-vector>
